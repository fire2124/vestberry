{
    "parser": "@babel/eslint-parser",
    "extends": [
        "standard",
        "standard-jsx",
        "standard-react"
    ],
    "plugins": [
        "babel",
        "react",
        "react-hooks",
        "promise"
    ],
    "env": {
        "browser": true
    },
    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false
    },
    "rules": {
        "key-spacing": "off",
        "jsx-quotes": [2, "prefer-double"],
        "max-len": [2, 120, 2],
        "object-curly-spacing": [2, "never"],
        "comma-dangle": [1, {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "ignore"
        }]
    }
}